<h1><%= @course.name %></h1>

<h2>Course Type: <%= @course.course_type %></h2>

<% if @course.teachers.count > 0 %>
    <h2>Teacher: <%= @course.teachers.first.full_name %></h2>
<% end %>

<div id='admin_courses'>
    <%= @course.description %>

    <%= button_to 'Edit Course', edit_course_path, method: :get  %> <br>

    <% if @course.teachers.count == 0 %>
        <%= button_to 'Assign Teachers', new_teacher_course_path, method: :get, params: { course_id: @course.id } %> <br>
    <% end %>
    <%= button_to 'Delete Course', course_path(@course), method: :delete  %>

</div>